{
  "name": "discord-ts-boilerplate",
  "version": "2.0.1",
  "description": "Discord bot built in TypeScript using discord.js",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "lint": "eslint src/**/*.ts",
    "clear-commands": "node scripts/register_commands.js --clear-commands",
    "build": "node scripts/build.js",
    "deploy": "node scripts/register_commands.js",
    "dev-deploy": "npm run build && npm run deploy",
    "start": "node dist/index.js",
    "prisma": "prisma",
    "seed": "tsx prisma/seed.ts",
    "setup": "pnpm i && pnpm prisma generate && pnpm prisma migrate deploy && pnpm seed"
  },
  "keywords": [
    "discordbot",
    "discord.js",
    "typescript"
  ],
  "author": "Maximus7474",
  "license": "AGPL-3.0-only",
  "dependencies": {
    "@prisma/client": "6.15.0",
    "@puppeteer/browsers": "^2.11.0",
    "axios": "^1.10.0",
    "colors": "^1.4.0",
    "discord.js": "^14.19.3",
    "dotenv": "^16.5.0",
    "puppeteer": "^24.32.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.15.29",
    "eslint": "^9.28.0",
    "nodemon": "^3.1.10",
    "prisma": "^6.15.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.1"
  }
}
